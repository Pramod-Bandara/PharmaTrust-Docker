# Environment variables example for PharmaTrust web app
# Copy to .env.local and fill with your values

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster0.example.mongodb.net/?retryWrites=true&w=majority

# MongoDB database name
MONGODB_DB=pharmatrust

# JWT (set strong secrets in production)
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h

# Public base URL for gateway (Vercel/Prod)
NEXT_PUBLIC_API_URL=https://your-domain.example

# Firebase client config (required for Firebase auth mode)
# Get these values from Firebase Console > Project Settings > General > Your Apps
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:abcdef1234567890
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Authentication mode (optional, auto-detected)
# Set to 'firebase' to force Firebase auth, 'demo' for demo mode
# If not set, will use Firebase if NEXT_PUBLIC_FIREBASE_API_KEY is present, else demo
NEXT_PUBLIC_AUTH_MODE=firebase

# Firebase server-side config (for API routes)
# Service account key from Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
