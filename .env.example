# PharmaTrust Environment Configuration
# Copy this file to .env and update the values for your environment

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=demo-secret-key-change-in-production

# Blockchain Configuration (Optional)
THIRDWEB_SECRET_KEY=
CONTRACT_ADDRESS=
BLOCKCHAIN_NETWORK=polygon-mumbai

# Database Configuration (Optional - defaults to Docker containers)
MONGO_URL=mongodb://localhost:27017/pharmatrust
REDIS_URL=redis://localhost:6379

# Service Ports (Optional - defaults shown)
AUTH_PORT=4001
MEDICINE_PORT=4002
IOT_PORT=4003
BLOCKCHAIN_PORT=4004
WEB_PORT=3000
NGINX_PORT=80
MOBILE_GATEWAY_PORT=4010

# Development Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# API URLs (Optional - defaults for Docker setup)
NEXT_PUBLIC_API_URL=http://localhost:80
NEXT_PUBLIC_WS_URL=ws://localhost:4003

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Demo Configuration
DEMO_MODE=true
ENABLE_MOCK_BLOCKCHAIN=true
