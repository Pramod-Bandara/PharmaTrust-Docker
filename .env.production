# PharmaTrust Production Environment Configuration
# This file contains production environment variables for deployment

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=production-jwt-secret-key-change-this-in-deployment
JWT_EXPIRES_IN=24h

# MongoDB Atlas Production Database
# Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pharmatrust?retryWrites=true&w=majority
MONGODB_DB=pharmatrust

# Blockchain Configuration (Production)
THIRDWEB_SECRET_KEY=your-production-thirdweb-secret-key
CONTRACT_ADDRESS=your-production-contract-address
BLOCKCHAIN_NETWORK=polygon-mainnet

# Production Service URLs
# Replace with your deployed service URLs
AUTH_SERVICE_URL=https://pharmatrust-auth.vercel.app
MEDICINE_SERVICE_URL=https://pharmatrust-medicine.vercel.app
IOT_SERVICE_URL=https://pharmatrust-iot.vercel.app
BLOCKCHAIN_SERVICE_URL=https://pharmatrust-blockchain.vercel.app
MOBILE_GATEWAY_URL=https://pharmatrust-mobile.vercel.app

# Public URLs for client-side
NEXT_PUBLIC_API_URL=https://pharmatrust.vercel.app
NEXT_PUBLIC_WS_URL=wss://pharmatrust-iot.vercel.app

# Production Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# MQTT Configuration (if using cloud MQTT broker)
MQTT_BROKER_URL=mqtt://your-cloud-mqtt-broker:1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password

# Demo Configuration (disable in production)
DEMO_MODE=false
ENABLE_MOCK_BLOCKCHAIN=false

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_ANALYTICS=true
