# Docker Compose Override for Development
# This file provides development-specific overrides
# It's automatically loaded by docker-compose when present

services:
  # Development overrides for faster iteration
  web:
    volumes:
      # Mount source code for hot reloading in development
      - ./web:/app
      - /app/node_modules
      - /app/.next
    environment:
      - NODE_ENV=development
    command: npm run dev
    
  auth:
    volumes:
      - ./services/auth:/app
      - /app/node_modules
      - /app/dist
    environment:
      - NODE_ENV=development
    command: npm run dev
    
  medicine:
    volumes:
      - ./services/medicine:/app
      - /app/node_modules
      - /app/dist
    environment:
      - NODE_ENV=development
    command: npm run dev
    
  iot:
    volumes:
      - ./services/iot:/app
      - /app/node_modules
      - /app/dist
    environment:
      - NODE_ENV=development
    command: npm run dev
    
  blockchain:
    volumes:
      - ./services/blockchain:/app
      - /app/node_modules
      - /app/dist
    environment:
      - NODE_ENV=development
    command: npm run dev
    
  mobile-gateway:
    volumes:
      - ./services/mobile-gateway:/app
      - /app/node_modules
      - /app/dist
    environment:
      - NODE_ENV=development
    command: npm run dev

  # Add mongo-express for database management in development
  mongo-express:
    image: mongo-express:latest
    container_name: pharmatrust-mongo-express
    restart: unless-stopped
    ports:
      - "8081:8081"
    environment:
      ME_CONFIG_MONGODB_SERVER: mongo
      ME_CONFIG_MONGODB_PORT: 27017
      ME_CONFIG_BASICAUTH_USERNAME: admin
      ME_CONFIG_BASICAUTH_PASSWORD: admin123
    depends_on:
      mongo:
        condition: service_healthy
    networks:
      - pharmanet
